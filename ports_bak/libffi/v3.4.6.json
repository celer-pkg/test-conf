{
    "url": "https://gitee.com/kumo-hub/libffi.git",
    "ref": "v3.4.6",
    "build_configs": [
        {
            "pattern": "*linux*",
            "system_tools": [
                "autoconf",
                "libtoolize"
            ],
            "patches": [
                "v3.4.6_fix_configure.patch"
            ],
            "build_tool": "makefiles",
            "library_type": "shared",
            "env_vars": [],
            "fix_configure": {
                "scripts": [
                    "autoreconf -vfi"
                ],
                "work_dir": "${SOURCE_DIR}"
            },
            "options": [
                "--host=${HOST}",
                "--disable-docs",
                "--disable-multi-os-directory"
            ],
            "dependencies": [],
            "dev_dependencies": []
        }
    ]
}