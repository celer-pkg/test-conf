{
    "url": "https://archive.mesa3d.org/older-versions/17.x/mesa-17.3.9.tar.gz",
    "ref": "17.3.9",
    "build_configs": [
        {
            "pattern": "*linux*",
            "patches": [
                "fix_duplicate_symbols_hash.patch"
            ],
            "build_system": "makefiles",
            "library_type": "shared",
            "options": [
                "--host=${HOST}",
                "--enable-optimized",
                "--enable-opengl",
                "--enable-gles2",
                "--enable-gles1",
                "--enable-egl",
                "--enable-shared-glapi",
                "--enable-dri",
                "--enable-shared-dricore",
                "--disable-llvm",
                "--enable-gallium-egl",
                "--with-egl-platforms=drm,x11",
                "--with-gallium-drivers=swrast",
                "--with-dri-drivers=swrast",
                "--enable-glx"
            ],
            "dependencies": [
                "glproto@1.4.14",
                "dri2proto@2.8",
                "libxshmfence@1.3.3",
                "openssl@3.4.1",
                "expat@2.6.4",
                "libdrm@2.4.124",
                "zlib@v1.3.1",
                "libxcb@1.17.0",
                "libx11@1.8.11",
                "libxext@1.3.6",
                "libxfixes@6.0.1",
                "libxdamage@1.1.6",
                "libunwind@1.6.1"
            ]
        }
    ]
}