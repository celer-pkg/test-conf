{
    "url": "https://gitlab.freedesktop.org/xorg/proto/xorgproto.git",
    "ref": "xorgproto-2024.1",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_tool": "makefiles",
            "library_type": "shared",
            "system_tools": [
                "autoconf",
                "xutils-dev"
            ],
            "options": [
                "--host=${HOST}",
                "--without-fop",
                "--enable-option-checking"
            ],
            "dependencies": [
                "xorg-sgml-doctools@1.12.1"
            ],
            "dev_dependencies": [
                "libxslt@v1.1.42"
            ]
        }
    ]
}