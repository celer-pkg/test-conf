{
    "url": "https://www.zlib.net/zlib-1.3.1.tar.gz",
    "ref": "v1.3.1",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_system": "cmake",
            "library_type": "shared",
            "options": [
                "-DZLIB_BUILD_EXAMPLES=OFF"
            ],
            "dependencies": [ ]
        },
        {
            "pattern": "*windows*",
            "build_system": "cmake",
            "library_type": "shared",
            "post_install": [
                "cmake -E rename ${PACKAGE_DIR}/lib/zlib.lib ${PACKAGE_DIR}/lib/z.lib"
            ],
            "options": [
                "-DZLIB_BUILD_EXAMPLES=OFF"
            ],
            "dependencies": [ ]
        }
    ]
}