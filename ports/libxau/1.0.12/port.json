{
    "url": "https://gitlab.freedesktop.org/xorg/lib/libxau.git",
    "ref": "libXau-1.0.12",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_system": "makefiles",
            "library_type": "shared",
            "build_tools": [
                "xutils-dev"
            ],
            "options": [
                "--host=${HOST}"
            ],
            "dependencies": [
                "xorgproto@2024.1"
            ]
        },
        {
            "pattern": "*windows*",
            "build_system": "makefiles",
            "library_type": "shared",
            "env_vars": [
                "CFLAGS=-DX_NOT_POSIX -DWIN32 -D_WINSOCKAPI_"
            ],
            "options": [
                "--host=${HOST}"
            ],
            "dependencies": [
                "xorgproto@2024.1"
            ]
        }
    ]
}