{
    "url": "https://gitlab.freedesktop.org/xorg/lib/libxau.git",
    "ref": "libXau-1.0.12",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_tool": "makefiles",
            "library_type": "shared",
            "env_vars": [
                "ACLOCAL_PATH=${INSTALLED_DIR}/share/aclocal"
            ],
            "options": [
                "--host=${HOST}"
            ],
            "dependencies": [
                "util-macros@1.20.2",
                "xorgproto@2024.1"
            ]
        }
    ]
}