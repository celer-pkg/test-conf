{
    "url": "https://gitlab.freedesktop.org/xorg/lib/libxshmfence.git",
    "ref": "libxshmfence-1.3.3",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_tools": [
                "autoconf",
                "automake",
                "xutils-dev"
            ],
            "build_system": "makefiles",
            "library_type": "shared",
            "pre_configure": {
                "scripts": [
                    "libtoolize",
                    "autoreconf -vfi"
                ],
                "work_dir": "${SOURCE_DIR}"
            },
            "options": [
                "--host=${HOST}"
            ],
            "dependencies": [
                "xorgproto@2024.1"
            ]
        }
    ]
}