{
    "url": "https://gitlab.freedesktop.org/xorg/lib/libxshmfence.git",
    "name": "libxshmfence",
    "version": "libxshmfence-1.3.3",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_tool": "makefiles",
            "library_type": "shared",
            "env_vars": [
                "NOCONFIGURE=1"
            ],
            "fix_configure": {
                "scripts": [
                    "libtoolize",
                    "autoreconf -vfi"
                ],
                "work_dir": "${SOURCE_DIR}"
            },
            "arguments": [
                "--host=${HOST}"
            ],
            "dependencies":[
                "util-macros@1.20.2",
                "xproto@7.0.31"
            ],
            "dev_dependencies": [
                "automake@1.17",
                "libtool@2.5.4"
            ]
        }
    ]
}