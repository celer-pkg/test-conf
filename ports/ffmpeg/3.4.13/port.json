{
    "url": "https://ffmpeg.org/releases/ffmpeg-3.4.13.tar.xz",
    "ref": "3.4.13",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_system": "makefiles",
            "library_type": "shared",
            "build_tools": [
                "nasm"
            ],
            "patches": [
                "fix_windows_build.patch"
            ],
            "env_vars": [
                "CFLAGS=-Wno-pointer-sign -Wno-incompatible-pointer-types -Wno-stringop-overread -Wno-stringop-truncation"
            ],
            "options": [
                "--sysroot=${SYSROOT}",
                "--cross-prefix=${CROSS_PREFIX}",
                "--arch=${SYSTEM_PROCESSOR}",
                "--target-os=win64",
                "--pkg-config=pkgconf",
                "--enable-cross-compile",
                "--toolchain=msvc",
                "--disable-programs",
                "--disable-doc",
                "--enable-libx264",
                "--disable-libx265",
                "--enable-pic",
                "--enable-gpl"
            ],
            "dependencies": [
                "x264@stable"
            ],
            "dev_dependencies": [
                "pkgconf@2.4.3"
            ],
            "cmake_config": "linux_shared"
        },
        {
            "pattern": "*windows*",
            "build_system": "makefiles",
            "library_type": "shared",
            "build_tools": [
                "nasm"
            ],
            "patches": [
                "fix_windows_build.patch"
            ],
            "env_vars": [],
            "options": [
                "--sysroot=${SYSROOT}",
                "--cross-prefix=${CROSS_PREFIX}",
                "--arch=${SYSTEM_PROCESSOR}",
                "--target-os=win64",
                "--pkg-config=pkgconf",
                "--enable-cross-compile",
                "--toolchain=msvc",
                "--disable-programs",
                "--disable-doc",
                "--enable-libx264",
                "--disable-libx265",
                "--enable-pic",
                "--enable-gpl"
            ],
            "dependencies": [
                "x264@stable"
            ],
            "dev_dependencies": [
                "pkgconf@2.4.3"
            ]
        }
    ]
}