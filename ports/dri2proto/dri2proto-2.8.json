{
    "url": "https://gitlab.freedesktop.org/xorg/proto/dri2proto.git",
    "name": "dri2proto",
    "version": "dri2proto-2.8",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_tool": "makefiles",
            "library_type": "shared",
            "env_vars": [
                "ACLOCAL_PATH=${INSTALLED_DIR}/share/aclocal"
            ],
            "arguments": [
                "--host=${HOST}",
                "--disable-dri3"
            ],
            "dependencies": [ 
                "util-macros@1.20.2"
            ]
        }
    ]
}