{
    "url": "https://gitee.com/phil-zhang/xcb-pthread-stubs.git",
    "name": "pthread-stubs",
    "version": "0.4",
    "build_configs": [
        {
            "pattern": "*linux*",
            "build_tool": "makefiles",
            "autogen_configure": true,
            "library_type": "shared",
            "env_vars": [
                "NOCONFIGURE=1",
                "ACLOCAL_PATH=${INSTALLED_DIR}/share/aclocal"
             ],
            "arguments": [
                "--host=${HOST}"
            ],
            "dependencies": [
                "util-macros@1.20.2"
            ]
        }
    ]
}