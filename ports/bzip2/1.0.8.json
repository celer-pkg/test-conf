{
    "url": "https://sourceware.org/pub/bzip2/bzip2-1.0.8.tar.gz",
    "ref": "1.0.8",
    "build_configs": [
        {
            "pattern": "*linux*",
            "system_tools": [
                "gettext",
                "autopoint"
            ],
            "patches": [],
            "build_tool": "makefiles",
            "library_type": "shared",
            "env_vars": [
                "NOCONFIGURE=1"
            ],
            "options": [
                "--host=${HOST}"
            ],
            "dependencies": [
                "freetype@2.13.3",
                "expat@2.6.4"
            ]
        }
    ]
}